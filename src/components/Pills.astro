---
const { label, Icon, color } = Astro.props;

const colorClasses = {
  cyan: "text-zinc-200 border-cyan-500/50 bg-cyan-800/50",
  black: "text-zinc-200 border-zinc-600/50 bg-zinc-800/50",
  purple: "text-zinc-200 border-purple-500/50 bg-purple-800/50",
};

const colorClass = colorClasses[color] || "text-gray-500 border-gray-500 bg-gray-500/50";

const classes = `flex px-4 py-1 border-2 rounded-2xl items-center space-x-2 ${colorClass}`;

---

<div
  class={classes}
>
  <p>{label}</p>
  <Icon color={`${(color === "black" || color === "cyan") ? "white" : color}`} />
</div>
