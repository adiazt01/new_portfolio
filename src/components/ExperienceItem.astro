---
import PillTechnology from './PillTechnology.astro';
const { job } = Astro.props;
const {description, date, company, companyLink} = job;
---

<div
  class="absolute w-3 h-3 rounded-full mt-1.5 -start-1.5 border border-emerald-900 bg-emerald-700"
>
</div>
<h3 class="text-xl font-semibold text-emerald-300">
  {job.title}
</h3>
{
  companyLink ? (
    <a
      href={companyLink}
      target="_blank"
      class="text-base font-medium text-amber-400 transition hover:text-amber-300 hover:scale-110"
    >
      {company}
      <i class="ms-1 fas fa-external-link-alt" />
    </a>
  ) : (
    <p class="text-base font-medium text-amber-400">{job.company}</p>
  )
}
<time class="mb-1 block text-sm font-medium text-fuchsia-300">
  {date}
</time>
<p class="mb-4 mt-2 text-base font-medium -tracking-tight text-gray-300">
  {description}
</p>
<div class="flex flex-row flex-wrap gap-3 justify-start items-center">
  {
    job.aptitudes?.map((aptitude, index) => (
      <PillTechnology
        key={index}
        color={aptitude.color}
        Icon={aptitude.icon}
        label={aptitude.label}
      />
    ))
  }
</div>
