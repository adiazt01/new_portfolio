---
import GitHub from "../icons/GitHub.astro";
import LinkedIn from "../icons/LinkedIn.astro";
import Mail from "../icons/Mail.astro";

const linksMedia = [
  {
    url: "https://twitter.com/adiazt01",
    icon: GitHub,
  },
  {
    url: "https://www.linkedin.com/in/armando-diaz-291385251/",
    icon: LinkedIn,
  },
  {
    url: "mailto:armandodt2004@gmail.com",
    icon: Mail,
  },
];
---

<footer
  class="flex justify-center items-center w-auto border-t-2 border-white/5 h-24"
>
  {
    linksMedia.map((link) => (
      <a
        href={link.url}
        target="_blank"
        rel="noopener noreferrer"
        class="text-xl text-white/80 rounded-full px-2 py-2 border-2 border-white/5 hover:bg-white/5 transition-all duration-300 ease-in-out mx-2 "
      >
        <link.icon color="white" />
      </a>
    ))
  }
</footer>
