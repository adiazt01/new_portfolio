      {projects.map((project, index) => (
        <li
          class="flex flex-col bg-slate-800 rounded-lg overflow-hidden"
        >
          <img
            src={project.image}
            alt={project.title}
            class="w-full h-48 object-cover object-center"
          />
          <div class="p-6">
            <h3 class="text-xl font-medium text-white mb-3">
              {project.title}
            </h3>
            <p class="text-gray-300 text-sm mb-4">
              {project.description}
            </p>
            <div class="flex flex-row flex-wrap gap-2">
              {project.technology.map((tech, index) => (
                <span
                  class={`flex items-center px-2 py-1 rounded-full text-xs font-medium bg-${tech.color}-600 text-white`}
                >
                  {tech.icon && (
                    <tech.icon class="w-4 h-4 mr-1" />
                  )}
                  {tech.label}
                </span>
              ))}
            </div>
            <div class="flex flex-row gap-4 mt-4">
              <a
                href={project.url}
                class="flex items-center px-4 py-2 rounded-md bg-cyan-600 text-white font-medium"
              >
                Ver proyecto
              </a>
              <a
                href={project.github}
                class="flex items-center px-4 py-2 rounded-md bg-gray-800 text-white font-medium"
              >
                Ver código
              </a>
            </div>
          </div>
        </li>
      ))}
    </ul>
  </div>
</section>
