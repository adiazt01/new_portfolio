---
const { label, Icon, color } = Astro.props;

const colorClasses = {
  red: "bg-red-100 text-red-800 dark:bg-red-800/50  border-red-500/50",
  orange:
    "bg-orange-100 text-white dark:bg-orange-800/50  border-orange-500/50",
  blue: "bg-blue-100 text-white dark:bg-blue-800/50 border-blue-500/50",
  yellow:
    "bg-yellow-100 text-white dark:bg-yellow-800/50 border-yellow-500/50",
  purple: "bg-purple-100 text-white dark:bg-purple-800/30 border-purple-500/50",
  green:
    "bg-green-100 text-green-800 dark:bg-green-800/50 dark:text-green-100 border-green-500/50",
  white:
    "bg-white text-gray-800 dark:bg-gray-800/50 dark:text-gray-100 border-gray-500/50",
  cyan: "bg-cyan-100 text-cyan-800 dark:bg-cyan-800/50 dark:text-cyan-100 border-cyan-500/50",
};

const classes = `flex items-center border-2 flex-row gap-2 py-1 px-5 rounded-2xl ${
  colorClasses[color] || "bg-gray-100 text-gray-800 dark:bg-gray-800"
}`;
---

<div class={classes}>
  <p class="text-xs font-bold">{label}</p>
  <Icon color={color} />
</div>
